type User {
  id: ID! @id
  name: String!
  email: String! @unique
  username: String! @unique
  password: String!
  createdAt: DateTime! @createdAt
}

type Student {
  id: ID! @id
  profileImg: String
  name: String!
  gender: GenderType!
  birthDate: DateTime!
  email: String!
  consulting: [Consulting!]! @relation(link: INLINE)
  studentState: [StudentState!]! @relation(link: INLINE)
}

type Consulting {
  id: ID! @id
  student: Student! 
  process: ProcessType! @default(value: UNOCCUPIED)
  createdAt: DateTime! @createdAt
}

type StudentState {
  id: ID! @id
  student: Student! 
  statusType: StatusType! @default(value: IN_PROGRESS)
  createdAt: DateTime! @createdAt
}

enum GenderType {
  MALE
  FEMALE
  RATHER_NOT_SAY
}

enum ProcessType {
  HIRED
  JOB_SEEKING
  IN_TRANSITION
  CONSTULING
  UNOCCUPIED
}

enum StatusType {
  LAYOFF
  WITHDRAW
  IN_PROGRESS
  HIRED
}